<div class="row">
  <div class="col-xs-10 col-xs-offset-1"
  <p id="notice"><%= notice %></p>
    <% @books.each do |book| %>
      <div class="col-lg-4 col-sm-6 col-xs-12">
        <ul class="each_book">
          <li><%= image_tag(book.picture_url, width: '100') %></li>
          <li>
            <ul class="data">
              <li>Title:<%= book.title %></li>
              <li>Memo:<%= book.memo %></li>
              <li>Author:<%= book.author %></li>
            </ul>
          </li>
          <li>
            <ul class="buttons">
              <li><%= link_to 'Show', book, class: "btn btn-default btn_black" %></li>
              <li><%= link_to 'Edit', edit_book_path(book), class: "btn btn-default btn_black" %></li>
            </ul>
          </li>
          <li><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn_black" %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>